#include <iostream>
using namespace std;

int main() {
	int h;
	int i;
	cout << "Enter a pyramind height: ";
	cin >> h;

	for (int i = 0; i<h, i++){
		cout << " ";
		cout << "*";
	}
	return 0;
}
