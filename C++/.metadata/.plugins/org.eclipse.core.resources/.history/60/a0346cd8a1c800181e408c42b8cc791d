#include <iostream>
using namespace std;

int main() {

	int h;
	int s = 0;
	cout << "Enter a pyramind height: ";
	cin >> h;

	if (h <= 2 or h >= 9){
		cout << "Input a number from 3 to 8: ";
		cin >> h;
	}

	for (int i = 0; i < h; i++)
		cout << " ";

	cout << "*" << endl;
	for (int l = 0; l < h; l++){
		cout << " ";
		cout << "*";
		for (a = 0; a < s; a++){
			cout << " ";
			s += 2;

		}
		cout << "*" << endl;
	}


	return 0;
}
