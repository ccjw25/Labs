#include <iostream>
using namespace std;

int main() {
	int n;
	long a = 1;
	long b = a;

	do {
		cout << "Enter an odd number: ";
		cin >> n;
	} while (n%2 == 0);

	for (int c = 0; c < n/2; c++){
		a+=b;
		b+=8;
	}
	cout << b;
	return 0;
}
